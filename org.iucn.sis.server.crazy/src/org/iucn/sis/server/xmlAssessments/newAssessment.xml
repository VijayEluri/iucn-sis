<assessment id="new">
<!-- xsi:noNamespaceSchemaLocation = "assessmentStructure.xsd"
		xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance">   -->

	<basicInformation>
		<speciesName></speciesName>
		<commonName></commonName>
		<taxonomicAuthority></taxonomicAuthority>
		<assessmentType>
			<global></global>
		</assessmentType>
		<kingdom></kingdom>
		<phylum></phylum>
	</basicInformation>
	
	<field id="0">
		<canonicalName>Common Name</canonicalName>
		<description>Enter Common Names, Seperated by Commas</description>
		<classOfService>New Assessment</classOfService>
		<location>New Assessment</location>
		<structures>
			<structure>
				<multiStructure>
					<multiStructs>
		<structure>
			<singleSelect>
				<option>Done</option>
				<option>Missing</option>
				<option>Incomplete</option>
				<option>Not possible</option>
				<selected>2</selected>
			</singleSelect>
		</structure>
					</multiStructs>
					<multiStructs>
		<structure>
			<singleSelect>
				<option>Done</option>
				<option>Missing</option>
				<option>Incomplete</option>
				<option>Not possible</option>
				<selected>3</selected>
			</singleSelect>
		</structure>
					</multiStructs>
				</multiStructure>
			</structure>
		</structures>
	</field>
	
	<field id="1">
		<canonicalName>Taxonomic Authority</canonicalName>
		<description>Enter Taxonomic Authority</description>
		<classOfService>New Assessment</classOfService>
		<location>New Assessment</location>
		<structures>
			<structure>
				<text></text>
			</structure>
		</structures>
	</field>
	
	<field id="2">
		<canonicalName>Assessment Type</canonicalName>
		<description>Choose Assessment Type</description>
		<classOfService>New Assessment</classOfService>
		<location>New Assessment</location>
		<structures>
			<structure>
				<relatedStructure>
					<dominantStructures>
						<structure>
							<singleSelect>
								<option>Global</option>
								<option>Regional</option>
								<selected>0</selected>
							</singleSelect>
						</structure>
					</dominantStructures>
					<dependentStructures>
						<structure>
							<text>Enter Region</text>
						</structure>
					</dependentStructures>
					<rules>
						<selectRule>
							<activateOnIndex>1</activateOnIndex>
							<actions>
								<onTrue>SHOW</onTrue>
								<onFalse>HIDE</onFalse>
							</actions>
						</selectRule>
					</rules>
				</relatedStructure>
			</structure>
		</structures>
	</field>
		
	<field id="3">
		<canonicalName>Infrarank</canonicalName>
		<description>Enter Infrarank, if applicable</description>
		<classOfService>New Assessment</classOfService>
		<location>New Assessment</location>
		<structures>
			<structure>
				<text></text>
			</structure>
		</structures>
	</field>
	
	<field id="4">
		<canonicalName>Subpopulation</canonicalName>
		<description>Enter Subpopulation, if applicable</description>
		<classOfService>New Assessment</classOfService>
		<location>New Assessment</location>
		<structures>
			<structure>
				<text></text>
			</structure>
		</structures>
	</field>
	
	<field id="5">
		<canonicalName>Plant Type</canonicalName>
		<description>Is this a plant?</description>
		<classOfService>New Assessment</classOfService>
		<location>New Assessment</location>
		<structures>
			<structure>
				<boolean></boolean>
			</structure>
		</structures>
	</field>
</assessment>