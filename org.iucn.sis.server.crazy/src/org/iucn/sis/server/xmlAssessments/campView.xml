<view id="Camp" title="Camp View"
		    	xsi:noNamespaceSchemaLocation = "views.xsd"
				xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance">
	<pages>
		<page title="Some Factors" id="GenInfo">
			<pageOrganizations>
				<organization>
					<field id="ElevationLower" />
				</organization>
				<organization>
					<composite>
						<field id="DepthUpper" />
						<field id="DepthLower" />
					</composite>
				</organization>
			</pageOrganizations>
		</page>
		
		<page title="Some More" id="OccurrenceExtent">
			<pageOrganizations>
				<organization>
					<field id="DepthZone" />
				</organization>
				<organization>
					<composite>
						<field id="BiogeographicRealm" />
						<field id="MapStatus" />
					</composite>
				</organization>
			</pageOrganizations>
		</page>
		
		<page title="Countries of Occurrence" id="Countries">
			<pageOrganizations>
				<organization>
					<field id="NumberMatureIndividualsPast" />
				</organization>
			</pageOrganizations>
		</page>
		
		<page title="Habitat Preferences" id="Habitat">
			<pageOrganizations>
				<organization>
					<field id="PopulationReductionPastBasis" />
				</organization>
				<organization>
					<composite>
						<field id="PopulationReductionPast" />
						<field id="NumberMatureIndividualsFuture" />
					</composite>
				</organization>
			</pageOrganizations>
		</page>
	</pages>
	
</view>